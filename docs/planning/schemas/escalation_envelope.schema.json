{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "itir://schemas/escalation_envelope.schema.json",
  "title": "EscalationEnvelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "envelope_id",
    "domain",
    "allowed_actions",
    "forbidden_actions",
    "allowed_channels",
    "termination_conditions",
    "tone_constraints"
  ],
  "properties": {
    "envelope_id": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$"
    },
    "domain": {
      "type": "string",
      "enum": ["healthcare", "legal", "administrative", "financial"]
    },
    "allowed_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "research",
          "draft_communications",
          "send_communications",
          "escalate_within_org"
        ]
      },
      "uniqueItems": true
    },
    "forbidden_actions": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "misrepresentation",
          "emotional_manipulation",
          "financial_commitment",
          "legal_binding",
          "medical_decision"
        ]
      },
      "uniqueItems": true,
      "default": []
    },
    "allowed_channels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["email", "official_form"]
      },
      "uniqueItems": true
    },
    "termination_conditions": {
      "type": "object",
      "additionalProperties": false,
      "required": ["stop_on", "time_limit_hours"],
      "properties": {
        "stop_on": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["first_success", "authoritative_denial", "human_abort"]
          },
          "uniqueItems": true
        },
        "time_limit_hours": {
          "type": "integer",
          "minimum": 1,
          "maximum": 72
        }
      }
    },
    "tone_constraints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["factual", "risk_framed", "non_emotive", "non_threatening"]
      },
      "uniqueItems": true
    }
  }
}

